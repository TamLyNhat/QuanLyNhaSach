@model TKHTTT.Models.Sach

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="font-weight:bold; font-size:20px">
                Thông tin chi tiết
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                        <div>
                            <table class="table">
                                <tr>
                                    <td>
                                        Tên sách
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.TenSach)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Tên thể loại
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.TheLoai.TenTL)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Tên NXB
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.NhaXuatBan.TenNXB)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Giá
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.GiaBia)
                                    </td>

                                </tr>
                                <tr>
                                    <td>
                                        Trạng thái (1:còn, 0: đã bán)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.TrangThai)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Tình trạng sách (1: mới, 0: cũ)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.Moi)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Hình ảnh của sách
                                    </td>

                                    <td>
                                        <img src="@Url.Content("~/Content/Image/" + @Model.HinhAnh )" alt="cover page" width="45" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>