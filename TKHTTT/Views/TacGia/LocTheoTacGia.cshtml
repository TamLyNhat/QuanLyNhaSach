@using TKHTTT.Models
@model List<ThongTinSach>
@{
    ViewBag.Title = "LocTheoTheLoai";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<div class="container FullWidth">
    <div class="clearfix border-bottom1">
        <h1 class="text-muted">@ViewBag.tg</h1>
    </div>
</div>

<div class="container">
    <div class="jumbotron FullWidth">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-4">

                    <div class="row justify-content-center">
                        <div>
                            <img src="@Url.Content("~/Content/Image/" + item.HinhAnh)" class="fiximage1 img-thumbnail " alt="error" />
                        </div>
                    </div>

                    <div class="caption Text-Topic">
                        <h3>@item.TenSach</h3>
                        <h4>Tác giả: @item.TenTG</h4>
                        <p>Giá: @item.GiaBia</p>
                        <p>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal1">
                                Mua
                            </button>
                        </p>
                    </div>

                </div>
            }
        </div>
    </div>
</div>
