@model TKHTTT.Models.Sach

@{
    ViewBag.Title = "CreateBook";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" style="color:cornflowerblue;">Thêm sách mới</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading text-center" style="font-weight:bold; font-size:20px">
                Thông tin sách mới
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                        @using (Html.BeginForm("CreateBook", "Book", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                
                                <div class="form-group">
                                    <label class="control-label col-md-5">
                                        Mã sách:
                                    </label>
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.MaSach, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mã sách" , required="required"} })
                                        @Html.ValidationMessageFor(model => model.MaSach, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="control-label col-md-5">
                                        Tên sách:
                                    </label>
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên sách", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-5">
                                        Sách mới:
                                    </label>
                                    <div class="col-md-7">
                                        @{
                                            SelectList Sachmoi = (SelectList)ViewBag.m;
                                        }

                                        @Html.DropDownListFor(model => model.Moi, Sachmoi, "---Select---")
                                                                            
                                        @Html.ValidationMessageFor(model => model.Moi, "", new { @class = "text-danger" })

                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-5">
                                        Trạng thái:
                                    </label>
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-5">
                                        Giá bìa:
                                    </label>
                                    <div class="col-md-7">
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">$</span>
                                            @Html.EditorFor(model => model.GiaBia, new { htmlAttributes = new { @class = "form-control", @placeholder = "Giá bán sách", required = "required" } })
                                            @Html.ValidationMessageFor(model => model.GiaBia, "", new { @class = "text-danger" })
                                            <span class="input-group-addon">.00</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-5">
                                        Thể loại:
                                    </label>
                                    <div class="col-md-7">
                                        @{
                                            List<TKHTTT.Models.TheLoai> ListType = (List<TKHTTT.Models.TheLoai>)ViewBag.tl;
                                        }

                                        @if (ListType != null)
                                        {
                                            @Html.DropDownListFor(model => model.MaTL, new SelectList(ListType,"MaTL","TenTL"), "---Select---")
                                        }

                                        @*@Html.DropDownList("MaTL", (IEnumerable<SelectListItem>)ViewData["DBTL"], new { id = "tagSelection" })*@
                                            @*@Html.ValidationMessageFor(model => model.MaTL, "", new { @class = "text-danger" })*@

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-5">
                                        Nhà xuất bản :
                                    </label>
                                    <div class="col-md-7">
                                        @{
                                            List<TKHTTT.Models.NhaXuatBan> ListType1 = (List<TKHTTT.Models.NhaXuatBan>)ViewBag.nxb;

                                        }

                                        @if (ListType1 != null)
                                        {
                                            @Html.DropDownListFor(model => model.MaNXB, new SelectList(ListType1, "MaNXB", "TenNXB"), "---Select---")
                                        }

                                        @*@Html.DropDownList("MaTL", (IEnumerable<SelectListItem>)ViewData["DBTL"], new { id = "tagSelection" })*@
                                        @*@Html.ValidationMessageFor(model => model.MaNXB, "", new { @class = "text-danger" })*@

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-5">
                                        Ảnh:
                                    </label>
                                    <div class="col-md-7">
                                        <input type="file" name="fileUpload" placeholder="Chọn hình ảnh đại diện"  value="asdasd"/>
                                        @ViewBag.ThongBao
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-6 col-md-6">
                                        <input type="submit" value="Thêm mới" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                                            }

                        <div>
                            @Html.ActionLink("Xem danh mục sách", "getListBook")
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
